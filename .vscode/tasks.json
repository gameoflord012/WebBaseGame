{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ninja",
            "type": "shell",
            "command": "cmake -G Ninja -S . -B build && ninja -C build",
            "options": {
                "cwd" : "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Donut",
            "type": "shell",
            "command": "./Donut",
            "options": {
                "cwd" : "${workspaceFolder}/build"
            },
            "dependsOn": "Build ninja",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
